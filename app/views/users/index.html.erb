<%= render "menu/admin" %>
<h1>All users:</h1>
<table>
  <thead>
    <tr>
      <th>name:</th>
      <th>First name:</th>
      <th>Last name:</th>
      <th>password:</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login.username  %></td>
        <td><%= user.login.first_name %></td>
        <td><%= user.login.last_name %></td>
        <td><%= user.login.password %></td>
        <td><%= link_to 'Show',user_path(user) %> </td>
        <td><%= link_to 'Edit',edit_user_path(user) %> </td>
        <td><%= link_to 'Destroy', user_path(user),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <div class="large-4 medium-6 columns">
<p><%=link_to 'Create new profile', new_user_path %></p>
</div>
