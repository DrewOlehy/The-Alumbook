<div class="row panel radius">
  <div class="large-12 medium-8 columns">
    <div class="row">
      <h1>Listing Giving Backs</h1>
    </div>
    <table>
      <thead>
        <tr>
          <th>Subject</th>
          <th>Position</th>
          <th>Description</th>
          <th>Requirements</th>
          <th>Approved</th>
          <th>Completed</th>
          <th>Giving back type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @giving_backs.each do |giving_back| %>
          <tr>
            <td><%= giving_back.subject %></td>
            <td><%= giving_back.position %></td>
            <td><%= giving_back.description %></td>
            <td><%= giving_back.requirements %></td>
            <td><%= giving_back.approved %></td>
            <td><%= giving_back.completed %></td>
            <td><% if giving_back.giving_back_type.to_i == 0 %>
              Internship
            <%elsif giving_back.giving_back_type.to_i == 1 %>
              Mentoring
            <%elsif giving_back.giving_back_type.to_i == 2 %>
              Guest Speaking
            <%else%>
              Other
            <% end %></td>
            <td><%= link_to 'Show',giving_back_path(giving_back),class: "small radius button" %></td>
            <td>  <%= link_to 'Delete', giving_back, method: :delete, data: { confirm: 'Are you sure?' },class: "small radius button" %></td>


          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
