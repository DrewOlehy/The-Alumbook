<div class="row">
  <div class="large-6 large-centered column">
    <div class="row">
      <div class="large-12 small-12 small-centered large-centered columns">
        <h1 align="center">Survey</h1>
      </div>
    </div>
    <hr /><br />
    <div class="row">
      <div class="large-6 large-centered small-12 columns">
        <%= form_tag 'options', method: "post" do %>
          <%= select_tag(:question_type, options_for_select([["-- Choose Report --", ""], ["Multiple Choice", 'multiple_choice'], ["Short Answer", 'short_answer'], ["Check All that Apply", 'check_all'], ["Giant Fucking Question", ""]])) %>
          <br /><br />
          <div align="center">
            <%= submit_tag "Submit", class: "button radius" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
