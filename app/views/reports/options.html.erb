<% content_for :title, "Alumbook | Report Options" %>

<%= render "menu/admin" %>

<p id="notice"><%= notice %></p>

<br />
<div class="row">
    <%= form_tag reports_display_path, method: "post" do %>

    <%= render @report_type %>

    <hr/><br />
    <div class="row">
      <div class="large-6 large-centered small-12 columns">
        <div class="row">
          <div class="large-6 small-12 column">
            <h4>Student Status:</h4>
          </div>
          <div class="large-6 small-12 column">
            <%= select_tag "user_status", "<option>All Students</option><option>Current Students</option><option>Alumni</option>".html_safe %>
          </div>
        </div>
      </div>
    </div>
    <br />
    <div class="row">
      <div class="large-6 large-centered small-12 columns">
        <div class="row">
          <div class="large-6 small-12 column">
          <h4>Apply to Saved List?</h4>
        </div>
        <div class="large-6 small-12 column">
          <%= select_tag "selected_saved_list", options_from_collection_for_select(@saved_list_array, "id", "list_name"), {:include_blank => 'No'} %>
        </div>
      </div>
    </div>
  </div>
  <hr /><br />
  <div class="row">
    <div align="center">
      <%= submit_tag "Submit", class: "button radius" %> |
      <a href="<%= reports_path %>" class="button radius">Back</a>
    </div>
    <% end %>
  </div>
</div>
