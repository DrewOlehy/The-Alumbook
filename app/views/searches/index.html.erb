<%= render "menu/admin" %>
<div class="row">
  <h1 class="medium-5-column">Advanced Search</h1>
</div>
<%= search_form_for @search, url: search_searches_path, method: :post do |f| %>
  <%= f.condition_fields do |c| %>
    <%= render "condition_fields", f: c %>
  <% end %>

  <div class="row"
    <p class="medium-5-column"><%= link_to_add_fields "+", f, :condition, class: "button" %></p>
  </div>
  <div class="row">
    <%= f.submit "Search", :class => "button medium-5-column" %>
  </div>
<% end %>
<%= render "results" %>
<%= render "disclaimer" %>