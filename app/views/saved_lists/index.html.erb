<!-- James Maher and Andrew Bockus -->
<div class="row">
  <div class="large-6 medium-6 small-12 large-centered medium-centered small-centered columns">
    <br />
    <h1 align="center">Saved Lists</h1>
  </div>
</div>
<br />
<div class="row">
  <div class="large-9 medium-9 small-12 large-centered medium-centered small-centered columns">
    <hr />
    <% @saved_lists.each do |saved_list| %>
      <div class="row">
        <div class="large-6 medium-6 small-12 columns">
          <h3><%= saved_list.list_name %></h3>
        </div>
        <div class="large-3 medium-3 small-12 columns">
          <%= link_to 'Show', saved_list_path(saved_list), class: "button radius" %>
        </div>
        <div class="large-3 medium-3 small-12 columns">
          <%= link_to 'Delete', saved_list_path(saved_list), method: :delete, data: { confirm: 'Are you sure?' }, class: "button radius" %>
        </div>
      </div>
    <% end %>
  </div>
</div>